<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sofarsounds.Home"
    android:background="#000000">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/home_bg"
        android:scaleType="centerCrop"
        android:alpha="0.5" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="232dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.sofarsounds.HomeScreen"
        android:layout_gravity="right|bottom"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Attend"
            android:id="@+id/attendButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_gravity="right"
            android:background="@android:color/background_light"
            android:textColor="@android:color/primary_text_light" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Past Shows"
            android:id="@+id/showsButton"
            android:background="@android:color/background_light"
            android:textColor="@android:color/primary_text_light"
            android:layout_below="@+id/attendButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_gravity="right" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Your Profile"
            android:id="@+id/profileButton"
            android:layout_alignEnd="@+id/showsButton"
            android:onClick="viewProfile"
            android:background="@android:color/background_light"
            android:textColor="@android:color/primary_text_light"
            android:layout_below="@+id/showsButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="right" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Boston"
        android:id="@+id/city"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

</FrameLayout>
