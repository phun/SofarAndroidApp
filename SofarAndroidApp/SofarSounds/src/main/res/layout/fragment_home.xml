<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sofarsounds.Home">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/home_bg"
        android:scaleType="centerCrop" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="232dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.sofarsounds.HomeScreen"
        android:layout_gravity="right|bottom"
        android:orientation="vertical"
        android:layout_marginLeft="60dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Attend"
            android:id="@+id/attendButton"
            android:textColor="#fff"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_gravity="right" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Past Shows"
            android:id="@+id/showsButton"
            android:textColor="#fff"
            android:layout_below="@+id/attendButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_gravity="right" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Your Profile"
            android:id="@+id/profileButton"
            android:layout_alignEnd="@+id/showsButton"
            android:onClick="viewProfile"
            android:textColor="#fff"
            android:layout_below="@+id/showsButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="right" />
    </LinearLayout>

</FrameLayout>
